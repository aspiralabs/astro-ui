{
    "name": "@aspiralabs/astro-ui",
    "version": "0.0.22-alpha",
    "module": "build/index.js",
    "types": "build/index.d.ts",
    "files": [
        "build"
    ],
    "description": "An Opiniated TailwindCSS + React Library",
    "scripts": {
        "start:storybook": "start-storybook -p 6006",
        "build:storybook": "yarn build-storybook -o ./docs",
        "build:tailwind": "postcss src/styles/tailwind.css -o src/styles/index.css",
        "build:rollup": "rm -rf build && rollup -c rollup.config.js",
        "watch:tailwind": "postcss --watch src/styles/tailwind.css -o src/styles/index.css",
        "watch:rollup": "rollup -c rollup.config.js --watch",
        "yalc-watch": "yalc-watch",
        "storybook": "yarn build:tailwind && npm-run-all watch:tailwind start:storybook",
        "build": "export NODE_ENV=production && rm -rf build &&  rollup -c rollup.config.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "generate": "node ./util/create-component",
        "dev": "concurrently \"yarn watch:tailwind\" \"yarn watch:rollup\" \"yarn start:storybook\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aspiralabs/astro-ui.git"
    },
    "keywords": [
        "tailwindcss",
        "react",
        "react-component"
    ],
    "author": "Aspira Labs",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/aspiralabs/astro-ui/issues"
    },
    "homepage": "https://github.com/aspiralabs/astro-ui#readme",
    "peerDependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "tailwindcss": ">=3.0.0"
    },
    "yalcWatch": {
        "watchFolder": "build",
        "buildWatchCommand": "watch:rollup",
        "extensions": "js,png,svg,gif,jpeg,css,ts,tsx,jsx"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-multi-entry": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-typescript": "^8.3.1",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/react": "^6.3.7",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@types/cleave.js": "^1.4.6",
        "@types/jest": "^24.9.1",
        "@types/react": "^16.14.14",
        "@types/react-dom": "^16.9.14",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.2",
        "babel-preset-react-app": "^10.0.0",
        "concurrently": "^6.5.1",
        "cssnano": "^4.1.10",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8",
        "postcss-cli": "^9.1.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rollup": "^2.63.0",
        "rollup-plugin-cleaner": "^1.0.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-multi-input": "^1.3.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.29.0",
        "sass-loader": "^10.2.0",
        "tailwindcss": "^3.0.7",
        "ts-jest": "^26.5.6",
        "typescript": "^4.4.2",
        "yalc-watch": "^0.0.6"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.3.0",
        "@fortawesome/free-regular-svg-icons": "^6.0.0",
        "@fortawesome/free-solid-svg-icons": "^6.0.0",
        "@fortawesome/react-fontawesome": "^0.1.17",
        "@tiptap/extension-code-block-lowlight": "^2.0.0-beta.68",
        "@tiptap/extension-highlight": "^2.0.0-beta.33",
        "@tiptap/extension-task-item": "^2.0.0-beta.31",
        "@tiptap/extension-task-list": "^2.0.0-beta.26",
        "@tiptap/extension-text-align": "^2.0.0-beta.29",
        "@tiptap/extension-underline": "^2.0.0-beta.23",
        "@tiptap/react": "^2.0.0-beta.108",
        "@tiptap/starter-kit": "^2.0.0-beta.183",
        "cleave.js": "^1.6.0",
        "deepmerge": "^4.2.2",
        "framer-motion": "^5.5.5",
        "lowlight": "^2.6.1",
        "moment": "^2.29.3",
        "react-table": "^7.7.0",
        "storybook-react-context": "^0.6.0",
